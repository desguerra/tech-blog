<article class='post'>
    <div class='title'>
        <a href='/post/{{id}}'><strong>{{title}}</strong></a>
        <span class='meta'>posted by
            <strong>{{user.username}}</strong>
            on
            {{format_date created_at}}
        </span>
    </div>
    <div class='post-content'>
        {{content}}
    </div>
</article>