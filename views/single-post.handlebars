<article class="post">
  <div class="title">
    <span><strong>{{post.title}}</strong></span>
    <span class='meta'>posted by <strong>{{post.user.username}}</strong>
        on
        {{post.created_at}}</span>
  </div>
  <div class="post-content">
    {{post.content}}
  </div>
  <div>
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

<form id="comment-form">
  <div>
    <textarea name="comment-body" class="form-control"></textarea>
  </div>

  <div>
    <button type="submit" class="btn">add comment</button>
  </div>
</form>

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>