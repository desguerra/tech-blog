<article class='edit-post-form-article'>
    <a href='/dashboard'> &larr; back to dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form id='edit-post-form' class='edit-post-form'>
        <div>
            <label for='post-title' class='form-label'>post title:</label>
            <input
                name='post-title'
                type='text'
                class='form-control'
                value='{{post.title}}'
            />
        </div>
        <div>
            <label for='post-content' class='form-label'>content:</label>
            <textarea
                name='post-content'
                class='form-control'
                rows='5'
            >{{post.content}}</textarea>
        </div>
        <div>
            by you on
            {{format_date post.created_at}}
            |
            <a href='/post/{{post.id}}'>{{post.comments.length}}
                {{format_plural 'comment' post.comments.length}}</a>
        </div>
        <button type='submit' class='btn'>save post</button>
        <button type='button' class='btn' id='delete-post-btn'>delete post</button>
    </form>
</article>

<script src='/javascript/edit-post.js'></script>
<script src='/javascript/delete-post.js'></script>
<script src='/javascript/comment.js'></script>